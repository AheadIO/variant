#include <eggs/variant.hpp>

template <int>
struct S {};

struct V {
  template <typename T, typename U>
  void operator()(T, U) const {}
};

int main() {
<%=
  (0...env[:repeat]).map { |i|
    alts = (0...n).map { |alt| "S<#{alt + i}>" }.join(", ")
    "  eggs::variant<#{alts}>\n" \
    "      v#{i}(S<#{i}>{}),\n"  \
    "      w#{i}(S<#{(n - 1) + i}>{});"
  }.join("\n")
%>
#if defined(METABENCH)
<%=
  (0...env[:repeat]).map { |i|
    "  eggs::apply(V{}, v#{i}, v#{i});\n" \
    "  eggs::apply(V{}, v#{i}, w#{i});\n" \
    "  eggs::apply(V{}, w#{i}, v#{i});\n" \
    "  eggs::apply(V{}, w#{i}, w#{i});"
  }.join("\n")
%>
#endif
}
