#include <eggs/variant.hpp>

template <int>
struct S {};

int main() {
<%=
  (0...env[:repeat]).map { |i|
    alts = (0...n).map { |alt| "S<#{alt + i}>" }.join(", ")
    "  eggs::variant<#{alts}>\n" \
    "      v#{i}(S<#{i}>{}),\n"  \
    "      w#{i}(S<#{(n - 1) + i}>{});"
  }.join("\n")
%>
#if defined(METABENCH)
<%=
  (0...env[:repeat]).map { |i|
    "  eggs::apply([](auto, auto) {}, v#{i}, v#{i});\n" \
    "  eggs::apply([](auto, auto) {}, v#{i}, w#{i});\n" \
    "  eggs::apply([](auto, auto) {}, w#{i}, v#{i});\n" \
    "  eggs::apply([](auto, auto) {}, w#{i}, w#{i});"
  }.join("\n")
%>
#endif
}
