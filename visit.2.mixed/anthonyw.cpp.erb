#include <functional>
#include <variant>

template <int>
struct S {};

int main() {
<%=
  (0...env[:repeat]).map { |i|
    x_alts = (0...n).map { |alt| "S<#{alt + i}>" }.join(", ")
    y_alts = (n - 1).downto(0).map { |alt| "S<#{alt + i}>" }.join(", ")
    "  std::experimental::variant<#{x_alts}>\n" \
    "      xv#{i}(S<#{i}>{}),\n"                \
    "      xw#{i}(S<#{(n - 1) + i}>{});\n"      \
    "  std::experimental::variant<#{y_alts}>\n" \
    "      yv#{i}(S<#{i}>{}),\n"                \
    "      yw#{i}(S<#{(n - 1) + i}>{});"
  }.join("\n")
%>
#if defined(METABENCH)
<%=
  (0...env[:repeat]).map { |i|
    "  std::experimental::visit([](auto, auto) {}, xv#{i}, yv#{i});\n" \
    "  std::experimental::visit([](auto, auto) {}, xv#{i}, yw#{i});\n" \
    "  std::experimental::visit([](auto, auto) {}, xw#{i}, yv#{i});\n" \
    "  std::experimental::visit([](auto, auto) {}, xw#{i}, yw#{i});"
  }.join("\n")
%>
#endif
}
